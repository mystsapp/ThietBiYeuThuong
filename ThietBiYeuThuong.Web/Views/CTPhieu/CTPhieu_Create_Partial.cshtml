@model CTPhieuViewModel

@using Microsoft.AspNetCore.Http
@using ThietBiYeuThuong.Data.Utilities
@using ThietBiYeuThuong.Data.Models
@inject IHttpContextAccessor HttpContextAccessor

@{

    var user = HttpContextAccessor.HttpContext.Session.GetSingle<User>("loginUser");
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm tình trạng</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">

        <form autocomplete="off" id="frmCTPhieuCreate">
            <div class="pr-4 pl-4 text-sm">

                <input type="hidden" asp-for="PhieuNhap.SoPhieu" />
                <input type="hidden" asp-for="CTPhieu.SoPhieu" value="@Model.PhieuNhap.SoPhieu" />
                <input type="hidden" asp-for="Page" />
                <div class="form-group row">

                    <div class="col-md-3">
                        <label asp-for="ThietBi.TenTB" class="control-label"></label>
                        <input asp-for="ThietBi.TenTB" class="form-control form-control-sm" id="txtTenTB" />
                        <span asp-validation-for="ThietBi.TenTB" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="ThietBi.LoaiTBId" class="control-label "></label>
                        <select asp-for="ThietBi.LoaiTBId" class="form-control form-control-sm "
                                asp-items="@(new SelectList(Model.LoaiThietBis, "Id", "Name"))" id="ddlLoaiTBId">
                        </select>
                        <span asp-validation-for="ThietBi.LoaiTBId" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="CTPhieu.DongHoGiao" class="control-label"></label>
                        <input asp-for="CTPhieu.DongHoGiao" class="form-control form-control-sm" id="txtDongHoGiao" />
                        <span asp-validation-for="CTPhieu.DongHoGiao" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="CTPhieu.DongHoThu" class="control-label"></label>
                        <input asp-for="CTPhieu.DongHoThu" class="form-control form-control-sm" id="txtDongHoThu" />
                        <span asp-validation-for="CTPhieu.DongHoThu" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-md-3">
                        <label asp-for="CTPhieu.NVGiaoBinh" class="control-label"></label>
                        <input asp-for="CTPhieu.NVGiaoBinh" class="form-control form-control-sm" id="txtNVGiaoBinh" />
                        <span asp-validation-for="CTPhieu.NVGiaoBinh" class="text-danger"></span>
                    </div>

                    <div class="col-md-9">
                        <label asp-for="CTPhieu.GhiChu" class="control-label"></label>
                        <input asp-for="CTPhieu.GhiChu" class="form-control form-control-sm" id="txtGhiChu" />
                        <span asp-validation-for="CTPhieu.GhiChu" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary btn-sm" id="btnSubmit_CTPhieu_Create"><i class="fas fa-save"></i> Save</button>
                    <button type="button" class="btn btn-success btn-sm" id="btnBack_CTPhieu_Create"><i class="fas fa-backward "></i> Back</button>
                </div>
            </div>
        </form>
    </div>
    <!-- /.card-body -->
</div>
