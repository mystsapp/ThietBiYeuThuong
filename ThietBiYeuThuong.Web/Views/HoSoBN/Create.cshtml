        $('#btnBenhNhanSearch_Create').click(function () {

            var maBNtext = '';

            if ($(this).data('name') === 'maKhNo') { // search of no
                maBNtext = $('#txtMaKhNo_ThemMoi').val();
            }
            if ($(this).data('name') === 'maKhCo') { // search of co
                maBNtext = $('#txtMaKhCo_ThemMoi').val();
            }

            BenhNhanSearch(maBNtext);
        })

        $('#txtBenhNhanId_Create').blur(function () {

            maKhtext = $(this).val();
            BenhNhan_By_Code(maKhtext);
        })

        function BenhNhan_By_Code(code) {

            $.ajax({
                url: '/BanhNhan/GetBenhNhans_By_Code',
                type: 'GET',
                data: { code: code },
                dataType: 'json',
                success: function (response) {
                    if (response.status) {
                        var data = response.data;
                        // console.log(data);

                        $('#txtHoTenBN').val(data.taxsign);
                        $('#txtHoTenTN').val(data.taxform);
                        $('#txtNamSinh').val(data.taxcode);

                    }

                }
            });

        }

        function BenhNhanSearch(code) {
            $.get('/BenhNhan/SearchBenhNhans_Code', { code: code }, function (data) {

                $('#benhNhanh_Modal_Create').modal('show');
                $('.benhNhan_Modal_Body_Create').html(data);
                $('#benhNhanh_Modal_Create').draggable();
            });
        }
