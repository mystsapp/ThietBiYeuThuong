        })

        $('#txtBenhNhanId_Edit').blur(function () {

            maKhtext = $(this).val();
            BenhNhan_By_Code(maKhtext);
        })

        function BenhNhan_By_Code(code) {

            $.ajax({
                url: '/BanhNhan/GetBenhNhans_By_Code',
                type: 'GET',
                data: { code: code },
                dataType: 'json',
                success: function (response) {
                    if (response.status) {
                        var data = response.data;
                        // console.log(data);

                        $('#txtHoTenBN_Edit').val(data.taxsign);
                        $('#txtHoTenTN_Edit').val(data.taxform);
                        $('#txtNamSinh_Edit').val(data.taxcode);

                    }

                }
            });

        }

        function BenhNhanSearch_Edit(code) {
            $.get('/BenhNhan/SearchBenhNhans_Code_Edit', { code: code }, function (data) {

                $('#benhNhanh_Modal_Edit').modal('show');
                $('.benhNhan_Modal_Body_Edit').html(data);
                $('#benhNhanh_Modal_Edit').draggable();
            });
        }

        function NVYTSearch_Edit(code) {
            $.get('/NVYT/SearchNVYTs_Code_Edit', { code: code }, function (data) {

                $('#nVYTSearch_Modal_Edit').modal('show');
                $('.nVYTSearch_Modal_Body_Edit').html(data);
                $('#nVYTSearch_Modal_Edit').draggable();
            });
        }
    </script>

