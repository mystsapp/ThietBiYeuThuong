@model ThietBiViewModel

<div class="row form-group">
    <div class="col-xs-12 col-md-6">
        <div class="input-group">
            <input type="text" value="@Model.MaTBText" class="form-control form-control-sm text-uppercase" id="txtTimTB_VuaBomVe" placeholder="Nhập mã TB, tên TB">
            <span class="input-group-btn">
                <button type="button" class="btn btn-default btn-sm " id="btSearchTB_VuaBomVe"><i class="fa fa-search"></i></button>
            </span>
        </div>
    </div>
</div>

<div style="overflow-x:auto; overflow-y:auto; height: 300px">
    <table class="table mytable text-nowrap text-sm" id="thietBiTbl">
        <thead>
            <tr class="table-info">

                <th>Mã TB</th>
                <th>Tên TB</th>
                <th>Ngày nhập</th>
                <th>Trạng thái</th>
                <th>Loại TB</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.IEnumThietBi_VuaBomVe != null)
            {
                @foreach (var item in Model.IEnumThietBi_VuaBomVe)
                {

                    <tr class="thietbis-cursor-pointer ">

                        <td class="tdVal_TB" data-id="@item.MaTB">@Html.DisplayFor(m => item.MaTB)</td>
                        <td class="tdVal_TB" data-id="@item.MaTB">@Html.DisplayFor(m => item.TenTB)</td>
                        <td class="tdVal_TB" data-id="@item.MaTB">@Html.DisplayFor(m => item.NgayTao)</td>
                        <td class="tdVal_TB" data-id="@item.MaTB">@Html.DisplayFor(m => item.TrangThai.Name)</td>
                        <td class="tdVal_TB" data-id="@item.MaTB">@Html.DisplayFor(m => item.LoaiThietBi.Name)</td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>
