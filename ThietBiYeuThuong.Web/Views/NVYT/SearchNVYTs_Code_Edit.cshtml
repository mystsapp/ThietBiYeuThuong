@model NVYTViewModel

<div class="row form-group">
    <div class="col-xs-12 col-md-6">
        <div class="input-group">
            <input type="text" value="@Model.MaNVYTText" class="form-control form-control-sm text-uppercase" id="txtTimNVYT_Edit" placeholder="Nhập mã TB, tên TB">
            <span class="input-group-btn">
                <button type="button" class="btn btn-default btn-sm " id="btSearchNVYT_Edit"><i class="fa fa-search"></i></button>
            </span>
        </div>
    </div>
</div>

<div style="overflow-x:auto; overflow-y:auto; height: 300px">
    <table class="table mytable text-nowrap text-sm" id="NVYTTbl">
        <thead>
            <tr class="table-info">

                <th>Mã NVYT</th>
                <th>Tên NVYT</th>
                <th>SĐT</th>
                <th>Đơn vị</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.IEnumNVYT != null)
            {
                @foreach (var item in Model.IEnumNVYT)
                {

                    <tr class="nvyts-cursor-pointer ">

                        <td class="tdVal_NVYT" data-id="@item.MaNVYT">@Html.DisplayFor(m => item.MaNVYT)</td>
                        <td class="tdVal_NVYT" data-id="@item.MaNVYT">@Html.DisplayFor(m => item.HoTenNVYTe)</td>
                        <td class="tdVal_NVYT" data-id="@item.MaNVYT">@Html.DisplayFor(m => item.SDT_NVYT)</td>
                        <td class="tdVal_NVYT" data-id="@item.MaNVYT">@Html.DisplayFor(m => item.DonVi)</td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>
